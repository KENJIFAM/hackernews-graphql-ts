  "dependencies": {},
  "devDependencies": {
    "@types/node": "^10.12.18",
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.9",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2"
  }
}
